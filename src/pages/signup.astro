---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign Up" authLayout={true} showFooter={true}>
  <div class="auth-page">
    <div class="auth-card">
      <h1 class="auth-title">Create Account</h1>
      <p class="auth-subtitle">Join the FSC Student Marketplace today.</p>

      <form class="auth-form" novalidate>
        <div class="form-group">
          <label class="form-label" for="fullName">Full Name</label>
          <input class="form-input" id="fullName" type="text" placeholder="Jane Smith" autocomplete="name" />
        </div>

        <div class="form-group">
          <label class="form-label" for="email">Student Email</label>
          <input class="form-input" id="email" type="email" placeholder="yourname@farmingdale.edu" autocomplete="email" />
          <span class="form-hint">Must be a valid @farmingdale.edu address</span>
        </div>

        <div class="form-group">
          <label class="form-label" for="phone">
            Phone Number <span class="optional">(optional)</span>
          </label>
          <input class="form-input" id="phone" type="tel" placeholder="(555) 000-0000" autocomplete="tel" />
        </div>

        <div class="form-group">
          <label class="form-label" for="password">Password</label>
          <div class="input-wrap">
            <input class="form-input" id="password" type="password" placeholder="Create a strong password" autocomplete="new-password" />
            <button type="button" class="toggle-pw" id="togglePw" aria-label="Toggle password visibility">
              <svg id="eyeOpen" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <svg id="eyeOff" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                <line x1="1" y1="1" x2="23" y2="23"/>
              </svg>
            </button>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label" for="confirmPassword">Confirm Password</label>
          <input class="form-input" id="confirmPassword" type="password" placeholder="Re-enter your password" autocomplete="new-password" />
        </div>

        <div class="terms-row">
          <input type="checkbox" id="terms" class="terms-checkbox" />
          <label for="terms" class="terms-label">
            I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
          </label>
        </div>

        <button type="submit" class="btn-primary">Sign Up</button>

        <p class="auth-switch">
          Already have an account? <a href="/login">Log In</a>
        </p>
      </form>
    </div>
  </div>
</Layout>

<style>
  .auth-page {
    min-height: calc(100vh - 62px - 210px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1.5rem;
    background: var(--gray-50);
  }

  .auth-card {
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-md);
    padding: 2.5rem 2rem;
    width: 100%;
    max-width: 440px;
  }

  .auth-title {
    font-size: 1.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 0.4rem;
  }

  .auth-subtitle {
    font-size: 0.85rem;
    color: var(--gray-500);
    text-align: center;
    margin-bottom: 1.75rem;
  }

  .auth-form { display: flex; flex-direction: column; gap: 1rem; }

  .form-hint { font-size: 0.75rem; color: var(--gray-400); }

  .optional { font-size: 0.75rem; color: var(--gray-400); font-weight: 400; }

  .input-wrap { position: relative; }
  .input-wrap .form-input { padding-right: 2.75rem; }

  .toggle-pw {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: var(--gray-400);
    padding: 0;
    display: flex;
    align-items: center;
    transition: color 0.15s;
  }

  .toggle-pw:hover { color: var(--gray-600); }

  .terms-row { display: flex; align-items: flex-start; gap: 0.6rem; padding-top: 0.25rem; }

  .terms-checkbox {
    margin-top: 0.15rem;
    accent-color: var(--green);
    width: 15px;
    height: 15px;
    flex-shrink: 0;
    cursor: pointer;
  }

  .terms-label { font-size: 0.8rem; color: var(--gray-600); line-height: 1.4; cursor: pointer; }
  .terms-label a { color: var(--green); font-weight: 600; text-decoration: none; }
  .terms-label a:hover { text-decoration: underline; }

  .auth-switch { text-align: center; font-size: 0.82rem; color: var(--gray-500); padding-top: 0.25rem; }
  .auth-switch a { color: var(--green); font-weight: 700; text-decoration: none; }
  .auth-switch a:hover { text-decoration: underline; }
</style>

<script>
  const toggleBtn = document.getElementById('togglePw');
  const pwInput  = document.getElementById('password') as HTMLInputElement | null;
  const eyeOpen  = document.getElementById('eyeOpen')  as HTMLElement | null;
  const eyeOff   = document.getElementById('eyeOff')   as HTMLElement | null;

  toggleBtn?.addEventListener('click', () => {
    if (!pwInput) return;
    const showing = pwInput.type === 'text';
    pwInput.type = showing ? 'password' : 'text';
    if (eyeOpen) eyeOpen.style.display = showing ? '' : 'none';
    if (eyeOff)  eyeOff.style.display  = showing ? 'none' : '';
  });
</script>
