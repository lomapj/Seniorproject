---
import Layout from "../layouts/Layout.astro";
---

<Layout title="FSC Student Marketplace | Buy & Sell on Campus">
  <div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container hero-container">
        <div class="hero-content">
          <div class="badge-new">Now Live for Spring 2026</div>
          <h1 class="hero-title">
            The Smarter Way to <span class="text-gradient">Buy & Sell</span> at FSC
          </h1>
          <p class="hero-description">
            The exclusive student-to-student marketplace for Farmingdale State
            College. Save money on textbooks, find room decor, or sell your old
            gear safely on campus.
          </p>
          <div class="hero-actions">
            <a href="/marketplace" class="btn-primary-xl">Browse Marketplace</a>
            <a href="/signup" class="btn-secondary-xl">Join the Community</a>
          </div>
          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-num">2,400+</span>
              <span class="stat-label">Active Students</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-num">500+</span>
              <span class="stat-label">Items Listed</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-num">1.2k+</span>
              <span class="stat-label">Deals Made</span>
            </div>
          </div>
        </div>
        <div class="hero-visual">
          <div class="visual-card main-card">
            <div class="card-img-placeholder"></div>
            <div class="card-content-sim">
              <div class="sim-line title"></div>
              <div class="sim-line price"></div>
            </div>
          </div>
          <div class="visual-card floating-card-1">
            <div class="icon-box">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                ></path></svg
              >
            </div>
            <span>Verified Students</span>
          </div>
          <div class="visual-card floating-card-2">
            <div class="icon-box">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><circle cx="12" cy="12" r="10"></circle><path
                  d="m16 12-4-4-4 4"></path><path d="M12 16V8"></path></svg
              >
            </div>
            <span>Safe Campus Pickups</span>
          </div>
          <div class="hero-blob"></div>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Popular Categories</h2>
          <p class="section-subtitle">
            Find exactly what you need for the semester
          </p>
        </div>
        <div class="category-grid">
          <a href="/marketplace?cat=Books" class="cat-card">
            <div class="cat-icon-wrap">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path
                  d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"
                ></path></svg
              >
            </div>
            <h3 class="cat-name">Textbooks</h3>
            <p class="cat-count">142 items</p>
          </a>
          <a href="/marketplace?cat=Electronics" class="cat-card">
            <div class="cat-icon-wrap">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"
                ></rect><line x1="8" y1="21" x2="16" y2="21"></line><line
                  x1="12"
                  y1="17"
                  x2="12"
                  y2="21"></line></svg
              >
            </div>
            <h3 class="cat-name">Electronics</h3>
            <p class="cat-count">85 items</p>
          </a>
          <a href="/marketplace?cat=Furniture" class="cat-card">
            <div class="cat-icon-wrap">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"
                ></path><path d="m2 8 10-6 10 6"></path><path d="m6 13 4-4 4 4"
                ></path></svg
              >
            </div>
            <h3 class="cat-name">Dorm Decor</h3>
            <p class="cat-count">64 items</p>
          </a>
          <a href="/marketplace?cat=Clothing" class="cat-card">
            <div class="cat-icon-wrap">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.62 1.96v14.16a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V5.42a2 2 0 0 0-1.62-1.96z"
                ></path><path d="M12 2v20"></path></svg
              >
            </div>
            <h3 class="cat-name">Clothing</h3>
            <p class="cat-count">112 items</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Why Us Section -->
    <section class="features-section">
      <div class="container">
        <div class="features-grid">
          <div class="feature-item">
            <div class="feature-icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                ></path></svg
              >
            </div>
            <h3 class="feature-title">Verified Students Only</h3>
            <p class="feature-text">
              Every user is verified with a farmingdale.edu email, ensuring a
              safe trading environment for everyone.
            </p>
          </div>
          <div class="feature-item">
            <div class="feature-icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-11.7 8.38 8.38 0 0 1 3.8.9L21 3z"
                ></path></svg
              >
            </div>
            <h3 class="feature-title">Instant Messaging</h3>
            <p class="feature-text">
              Chat with buyers and sellers in real-time. Negotiate prices and
              set up meetups without leaving the platform.
            </p>
          </div>
          <div class="feature-item">
            <div class="feature-icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><circle cx="12" cy="12" r="10"></circle><polyline
                  points="12 6 12 12 16 14"></polyline></svg
              >
            </div>
            <h3 class="feature-title">Fast On-Campus Pickups</h3>
            <p class="feature-text">
              No shipping costs or waiting. Simply meet at the Campus Center or
              the library for quick hand-offs.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-card">
          <h2 class="cta-title">Ready to clear your desk?</h2>
          <p class="cta-text">
            Join thousands of FSC students already saving money and earning
            extra cash.
          </p>
          <div class="cta-buttons">
            <a href="/post" class="btn-light">List an Item Now</a>
            <a href="/marketplace" class="btn-ghost-light">See What's New</a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .landing-page {
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero-section {
    padding: 8rem 0 10rem;
    background: var(--white);
    position: relative;
    overflow: hidden;
  }
  .hero-container {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 4rem;
    align-items: center;
  }

  @media (max-width: 968px) {
    .hero-section {
      padding: 4rem 0;
    }
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .hero-title {
      font-size: 3rem;
    }
    .hero-description {
      font-size: 1.1rem;
      margin-inline: auto;
    }
    .hero-actions {
      justify-content: center;
      flex-wrap: wrap;
    }
    .hero-stats {
      justify-content: center;
      gap: 1.5rem;
    }
    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.25rem;
    }
    .hero-actions .btn-primary-xl,
    .hero-actions .btn-secondary-xl {
      width: 100%;
    }
    .hero-stats {
      flex-direction: column;
      gap: 1rem;
    }
    .stat-divider {
      display: none;
    }
  }

  .badge-new {
    display: inline-block;
    background: var(--primary-soft);
    color: var(--primary);
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    border: 1px solid var(--primary-soft);
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    color: var(--gray-900);
    letter-spacing: -0.04em;
    margin-bottom: 1.5rem;
  }
  .text-gradient {
    background: linear-gradient(135deg, var(--primary) 0%, #00a884 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--gray-500);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 4rem;
  }
  .btn-primary-xl {
    padding: 1.25rem 2.5rem;
    background: var(--primary);
    color: var(--white);
    border-radius: var(--radius-lg);
    font-weight: 800;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 25px -5px rgba(0, 97, 83, 0.3);
  }
  .btn-primary-xl:hover {
    background: var(--primary-hover);
    transform: translateY(-3px);
    box-shadow: 0 20px 35px -10px rgba(0, 97, 83, 0.4);
  }

  .btn-secondary-xl {
    padding: 1.25rem 2.5rem;
    background: var(--white);
    color: var(--gray-900);
    border: 1.5px solid var(--gray-200);
    border-radius: var(--radius-lg);
    font-weight: 800;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-secondary-xl:hover {
    background: var(--gray-50);
    border-color: var(--gray-300);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }
  .stat-item {
    display: flex;
    flex-direction: column;
  }
  .stat-num {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--gray-900);
  }
  .stat-label {
    font-size: 0.85rem;
    color: var(--gray-400);
    font-weight: 600;
  }
  .stat-divider {
    width: 1px;
    height: 30px;
    background: var(--gray-200);
  }

  /* Hero Visual */
  .hero-visual {
    position: relative;
    height: 500px;
  }
  .visual-card {
    background: var(--white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-2xl);
    border: 1px solid var(--gray-100);
    position: absolute;
    z-index: 2;
  }

  .main-card {
    width: 320px;
    height: 400px;
    left: 10%;
    top: 5%;
    padding: 1rem;
    transform: rotate(-5deg);
  }
  .card-img-placeholder {
    width: 100%;
    height: 75%;
    background: var(--gray-100);
    border-radius: var(--radius-lg);
  }
  .card-content-sim {
    margin-top: 1rem;
  }
  .sim-line {
    background: var(--gray-100);
    height: 12px;
    border-radius: 6px;
    margin-bottom: 0.75rem;
  }
  .sim-line.title {
    width: 80%;
  }
  .sim-line.price {
    width: 40%;
    background: var(--primary-soft);
  }

  .floating-card-1 {
    top: 50%;
    right: 0%;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 700;
    color: var(--gray-800);
    transform: rotate(3deg);
    animation: float 6s ease-in-out infinite;
  }
  .icon-box {
    color: var(--primary);
  }

  .floating-card-2 {
    bottom: 5%;
    left: -5%;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 700;
    color: var(--gray-800);
    transform: rotate(-2deg);
    animation: float 8s ease-in-out infinite reverse;
  }

  @keyframes float {
    0% {
      transform: translateY(0) rotate(3deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
    100% {
      transform: translateY(0) rotate(3deg);
    }
  }

  .hero-blob {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: radial-gradient(
      circle,
      var(--primary-soft) 0%,
      transparent 70%
    );
    z-index: 1;
    opacity: 0.6;
    filter: blur(40px);
  }

  /* Categories */
  .categories-section {
    padding: 10rem 0;
    background: var(--white);
    border-top: 1px solid var(--gray-100);
  }
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .section-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--gray-900);
    letter-spacing: -0.02em;
  }
  .section-subtitle {
    font-size: 1.1rem;
    color: var(--gray-500);
    margin-top: 0.5rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }
  .cat-card {
    background: var(--white);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-xl);
    padding: 2.5rem 2rem;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .cat-card:hover {
    border-color: var(--primary);
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }
  .cat-icon-wrap {
    width: 64px;
    height: 64px;
    background: var(--gray-50);
    border-radius: var(--radius-lg);
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-700);
    transition: all 0.3s;
  }
  .cat-card:hover .cat-icon-wrap {
    background: var(--primary);
    color: var(--white);
  }
  .cat-name {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--gray-900);
    margin-bottom: 0.25rem;
  }
  .cat-count {
    font-size: 0.85rem;
    color: var(--gray-400);
    font-weight: 600;
  }

  /* Features */
  .features-section {
    padding: 10rem 0;
    background: var(--gray-50);
  }
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }
  @media (max-width: 900px) {
    .features-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
  }

  .feature-item {
    text-align: center;
  }
  .feature-icon {
    width: 56px;
    height: 56px;
    background: var(--primary);
    color: var(--white);
    border-radius: var(--radius-lg);
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
  }
  .feature-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--gray-900);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
  }
  .feature-text {
    font-size: 1.05rem;
    color: var(--gray-500);
    line-height: 1.6;
  }

  /* CTA */
  .cta-section {
    padding: 10rem 0;
  }
  .cta-card {
    background: linear-gradient(135deg, var(--primary) 0%, #004d42 100%);
    border-radius: var(--radius-2xl);
    padding: 5rem 2rem;
    text-align: center;
    color: var(--white);
    position: relative;
    overflow: hidden;
    box-shadow: 0 30px 60px -12px rgba(0, 97, 83, 0.4);
  }
  .cta-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }
  .cta-text {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-inline: auto;
  }
  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .btn-light {
    padding: 1.25rem 2.5rem;
    background: var(--white);
    color: var(--primary);
    border-radius: var(--radius-lg);
    font-weight: 800;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-light:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
  }

  .btn-ghost-light {
    padding: 1.25rem 2.5rem;
    background: transparent;
    color: var(--white);
    border: 1.5px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-lg);
    font-weight: 800;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-ghost-light:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--white);
  }
</style>
