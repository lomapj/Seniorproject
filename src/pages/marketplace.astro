<Layout title="Marketplace">
  <div class="mp-page">
    <!-- Hero / Header Section -->
    <div class="mp-hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <h1 class="hero-title">Campus Marketplace</h1>
            <p class="hero-tagline">
              Buy and sell items with your fellow Farmingdale students
