<script>
  // Filtering Logic
  const catChips = document.querySelectorAll(".cat-chip");
  const listingGrid = document.getElementById("listingGrid");
  const listingCards = document.querySelectorAll(".listing-card");
  const priceMin = document.querySelector(".price-input[placeholder='Min']");
  const priceMax = document.querySelector(".price-input[placeholder='Max']");
  const applyBtn = document.querySelector(".btn-filter-apply");
  const searchInput = document.querySelector(".nav-search-input");

  let currentCat = "All";

  function filterListings() {
    const min = parseFloat((priceMin as HTMLInputElement)?.value || "0");
    const max =
      parseFloat((priceMax as HTMLInputElement)?.value || "Infinity") ||
      Infinity;
    const params = new URLSearchParams(window.location.search);
    const query =
      (params.get("q") || params.get("search"))?.toLowerCase() || "";
    const savedOnly = params.get("saved") === "true";
    const savedIds = new Set(
      JSON.parse(localStorage.getItem("fsc_marketplace_saved") || "[]").map(
        (id: any) => id.toString(),
      ),
    );

    listingGrid?.classList.add("filtering");

    listingCards.forEach((c) => {
      const card = c as HTMLElement;
      const cardId = card.getAttribute("data-id") || "";
      const cardCat = card.getAttribute("data-category");
      const cardPrice = parseFloat(card.getAttribute("data-price") || "0");
      const cardTitle =
        card.querySelector(".card-title")?.textContent?.toLowerCase() || "";

      const catMatch = currentCat === "All" || cardCat === currentCat;
      const priceMatch = cardPrice >= min && cardPrice <= max;
      const searchMatch = !query || cardTitle.includes(query);
      const savedMatch = !savedOnly || savedIds.has(cardId);

      if (catMatch && priceMatch && searchMatch && savedMatch) {
        card.style.display = "flex";
        setTimeout(() => card.classList.add("fade-in-visible"), 10);
      } else {
        card.style.display = "none";
        card.classList.remove("fade-in-visible");
      }
    });

    // Update results count
    const visibleCount = Array.from(listingCards).filter(
      (c) => (c as HTMLElement).style.display !== "none",
    ).length;
    const countEl = document.querySelector(".results-count strong");
    if (countEl) countEl.textContent = visibleCount.toString();
  }

  catChips.forEach((chip) => {
    chip.addEventListener("click", () => {
      catChips.forEach((c) => c.classList.remove("active"));
      chip.classList.add("active");
      currentCat = chip.getAttribute("data-cat") || "All";
      filterListings();
    });
  });

  applyBtn?.addEventListener("click", filterListings);

  // Initial filter run (for search queries or defaults)
  filterListings();

  // Entrance Animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("fade-in-visible");
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  listingCards.forEach((card) => {
    card.classList.add("fade-in-shimmer");
    observer.observe(card);
  });

  // Listen for global save changes from Layout
  window.addEventListener("saved-changed", filterListings);
</script>

