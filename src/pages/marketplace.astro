          </div>
          <a href="/post" class="btn-primary sell-cta">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="12" y1="5" x2="12" y2="19"></line><line
                x1="5"
                y1="12"
                x2="19"
                y2="12"></line>
            </svg>
            Sell An Item
          </a>
        </div>
      </div>
    </div>

    <!-- Category Filter Bar (Sticky) -->
    <div class="cat-bar">
      <div class="container">
        <div class="cat-inner">
          <div class="cat-chips" id="catChips">
            {
              [
                "All",
                "Books",
                "Electronics",
                "Furniture",
                "Clothing",
                "Misc",
              ].map((cat, i) => (
                <button
                  class={`cat-chip${i === 0 ? " active" : ""}`}
                  data-cat={cat}
                >
                  {cat}
                </button>
