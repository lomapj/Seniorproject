---
import Layout from '../layouts/Layout.astro';

const conversations = [
  { id: 1, name: 'Sarah J.',   initials: 'SJ', color: '#006153', preview: 'Is the textbook still available?', time: '2:46 PM',    rating: 4.5, unread: 2, active: true  },
  { id: 2, name: 'Michael T.', initials: 'MT', color: '#1d3557', preview: 'Thanks for the quick response!',  time: '1:30 PM',    rating: 4.8, unread: 0, active: false },
  { id: 3, name: 'Emily R.',   initials: 'ER', color: '#e07a5f', preview: 'Can we meet on campus?',          time: 'Yesterday',  rating: 4.2, unread: 0, active: false },
  { id: 4, name: 'David K.',   initials: 'DK', color: '#6930c3', preview: 'What condition is it in?',        time: 'Yesterday',  rating: 4.7, unread: 0, active: false },
  { id: 5, name: 'Chris M.',   initials: 'CM', color: '#606c38', preview: 'I\'ll take it! When can we meet?', time: 'Monday',    rating: 5.0, unread: 0, active: false },
];

const messages = [
  { id: 1, sender: 'them', text: "Hi! I saw your listing for the Biology textbook. Is it still available?", time: '2:46 PM' },
  { id: 2, sender: 'me',   text: "Yes, it is! It's in excellent condition, barely used.", time: '2:47 PM' },
  { id: 3, sender: 'them', text: "Is the textbook still available?", time: '2:50 PM' },
  { id: 4, sender: 'them', text: "Great! Can I pick it up tomorrow?", time: '2:40 PM' },
  { id: 5, sender: 'me',   text: "Yes, it is! It's in excellent condition.", time: '2:41 PM' },
  { id: 6, sender: 'me',   text: "Sure! I'm free after 3 PM. We can meet at the library.", time: '7:02 PM' },
];
---

<Layout title="Messages" showFooter={false}>
  <div class="messages-page">

    <!-- Left panel: conversation list -->
    <aside class="conv-panel">
      <div class="conv-header">
        <h1 class="conv-title">Messages</h1>
        <button type="button" class="new-msg-btn" aria-label="New message">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
          </svg>
        </button>
      </div>

      <div class="conv-search">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" class="conv-search-icon">
          <circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>
        </svg>
        <input type="text" class="conv-search-input" placeholder="Search messages..." />
      </div>

      <div class="conv-list" id="convList">
        {conversations.map(conv => (
          <button
            type="button"
            class={`conv-item${conv.active ? ' active' : ''}`}
            data-conv={conv.id}
          >
            <div class="conv-avatar" style={`background:${conv.color}`}>{conv.initials}</div>
            <div class="conv-info">
              <div class="conv-top-row">
                <span class="conv-name">{conv.name}</span>
                <span class="conv-time">{conv.time}</span>
              </div>
              <div class="conv-bottom-row">
                <span class="conv-preview">{conv.preview}</span>
                {conv.unread > 0 && <span class="unread-badge">{conv.unread}</span>}
              </div>
              <div class="conv-stars">
                <span class="stars" style="font-size:0.65rem">{'â˜…'.repeat(Math.floor(conv.rating))}</span>
                <span style="font-size:0.65rem;color:var(--gray-400);margin-left:0.2rem">{conv.rating}</span>
              </div>
            </div>
          </button>
        ))}
      </div>
    </aside>

    <!-- Right panel: active chat -->
    <section class="chat-panel">
      <!-- Chat header -->
      <div class="chat-header">
        <div class="chat-user">
          <div class="chat-avatar" style="background:#006153">SJ</div>
          <div>
            <p class="chat-name">Sarah J.</p>
            <div class="chat-meta">
              <span class="stars" style="font-size:0.72rem">â˜…â˜…â˜…â˜…Â½</span>
              <span class="stars-text">4.5 (43)</span>
            </div>
          </div>
        </div>
        <a href="/item" class="listing-link-btn">
          <div class="listing-thumb" style="background:linear-gradient(135deg,#2d6a4f,#52b788)">ðŸ“—</div>
          <div>
            <p class="listing-link-title">Biology Textbook</p>
            <p class="listing-link-price" style="color:var(--green);font-size:0.78rem;font-weight:700">$45</p>
          </div>
        </a>
      </div>

      <!-- Messages -->
      <div class="chat-messages" id="chatMessages">
        <p class="date-divider">Today</p>

        {messages.map(msg => (
          <div class={`msg-wrap ${msg.sender}`}>
            {msg.sender === 'them' && (
              <div class="msg-avatar" style="background:#006153">SJ</div>
            )}
            <div class="msg-bubble-wrap">
              <div class={`msg-bubble ${msg.sender}`}>{msg.text}</div>
              <span class="msg-time">{msg.time}</span>
            </div>
          </div>
        ))}
      </div>

      <!-- Input bar -->
      <div class="chat-input-bar">
        <div class="chat-input-actions">
          <button type="button" class="input-action-btn" title="Attach file">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
            </svg>
          </button>
          <button type="button" class="input-action-btn" title="Send image">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/>
              <polyline points="21 15 16 10 5 21"/>
            </svg>
          </button>
          <button type="button" class="input-action-btn" title="Emoji">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/>
              <line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
          </button>
        </div>
        <div class="chat-input-field-wrap">
          <input
            type="text"
            class="chat-input-field"
            id="messageInput"
            placeholder="Type a message..."
            autocomplete="off"
          />
        </div>
        <button type="button" class="send-btn" id="sendBtn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="22" y1="2" x2="11" y2="13"/>
            <polygon points="22 2 15 22 11 13 2 9 22 2"/>
          </svg>
          Send
        </button>
      </div>
    </section>
  </div>
</Layout>

<style>
  .messages-page {
    display: grid;
    grid-template-columns: 320px 1fr;
    height: calc(100vh - 62px);
    overflow: hidden;
    background: white;
  }

  @media (max-width: 768px) { .messages-page { grid-template-columns: 1fr; } }

  /* â”€â”€ Left Panel â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .conv-panel {
    border-right: 1px solid var(--gray-200);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background: white;
  }

  .conv-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1rem 0.75rem;
    flex-shrink: 0;
  }

  .conv-title { font-size: 1.15rem; font-weight: 800; }

  .new-msg-btn {
    background: var(--green-light);
    border: none;
    border-radius: var(--radius-sm);
    width: 32px;
    height: 32px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--green);
    transition: background 0.15s;
  }

  .new-msg-btn:hover { background: rgba(0,97,83,0.18); }

  .conv-search {
    position: relative;
    padding: 0 1rem 0.75rem;
    flex-shrink: 0;
  }

  .conv-search-icon {
    position: absolute;
    left: 1.65rem;
    top: 50%;
    transform: translateY(-55%);
    color: var(--gray-400);
    pointer-events: none;
  }

  .conv-search-input {
    width: 100%;
    padding: 0.5rem 0.75rem 0.5rem 2.2rem;
    border-radius: var(--radius-md);
    border: 1.5px solid var(--gray-200);
    font-size: 0.82rem;
    font-family: var(--font);
    outline: none;
    transition: border-color 0.15s;
    background: var(--gray-50);
  }

  .conv-search-input:focus { border-color: var(--green); background: white; }

  .conv-list {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .conv-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.85rem 1rem;
    cursor: pointer;
    border: none;
    background: transparent;
    text-align: left;
    width: 100%;
    transition: background 0.15s;
    border-bottom: 1px solid var(--gray-100);
    font-family: var(--font);
  }

  .conv-item:hover  { background: var(--gray-50); }
  .conv-item.active { background: var(--green-light); border-right: 3px solid var(--green); }

  .conv-avatar {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    color: white;
    font-weight: 700;
    font-size: 0.82rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .conv-info { flex: 1; min-width: 0; }

  .conv-top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.15rem;
  }

  .conv-name  { font-size: 0.88rem; font-weight: 700; color: var(--gray-800); }
  .conv-time  { font-size: 0.7rem; color: var(--gray-400); white-space: nowrap; flex-shrink: 0; }

  .conv-bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.25rem;
  }

  .conv-preview {
    font-size: 0.78rem;
    color: var(--gray-500);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    min-width: 0;
  }

  .unread-badge {
    background: var(--green);
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    min-width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    padding: 0 3px;
  }

  .conv-stars { margin-top: 0.15rem; }

  /* â”€â”€ Right Panel â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .chat-panel {
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .chat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--gray-200);
    flex-shrink: 0;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .chat-user { display: flex; align-items: center; gap: 0.75rem; }

  .chat-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    color: white;
    font-weight: 700;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .chat-name  { font-size: 0.95rem; font-weight: 700; }
  .chat-meta  { display: flex; align-items: center; gap: 0.25rem; margin-top: 0.1rem; }

  .listing-link-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    background: var(--gray-50);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-md);
    padding: 0.5rem 0.75rem;
    text-decoration: none;
    color: inherit;
    transition: background 0.15s;
  }

  .listing-link-btn:hover { background: var(--green-light); }

  .listing-thumb {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    flex-shrink: 0;
  }

  .listing-link-title { font-size: 0.8rem; font-weight: 600; color: var(--gray-700); }

  /* Messages area */
  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: var(--gray-50);
  }

  .date-divider {
    text-align: center;
    font-size: 0.72rem;
    color: var(--gray-400);
    font-weight: 600;
    margin: 0.25rem 0;
  }

  .msg-wrap {
    display: flex;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .msg-wrap.me {
    flex-direction: row-reverse;
  }

  .msg-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    color: white;
    font-size: 0.6rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-bottom: 1.2rem;
  }

  .msg-bubble-wrap {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    max-width: 62%;
  }

  .msg-wrap.me .msg-bubble-wrap { align-items: flex-end; }

  .msg-bubble {
    padding: 0.65rem 0.9rem;
    border-radius: var(--radius-md);
    font-size: 0.88rem;
    line-height: 1.5;
  }

  .msg-bubble.them {
    background: white;
    border: 1px solid var(--gray-200);
    border-bottom-left-radius: 4px;
    color: var(--gray-800);
  }

  .msg-bubble.me {
    background: var(--green);
    color: white;
    border-bottom-right-radius: 4px;
  }

  .msg-time {
    font-size: 0.68rem;
    color: var(--gray-400);
    padding: 0 0.25rem;
  }

  /* Input bar */
  .chat-input-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.25rem;
    border-top: 1px solid var(--gray-200);
    background: white;
    flex-shrink: 0;
  }

  .chat-input-actions { display: flex; gap: 0.25rem; flex-shrink: 0; }

  .input-action-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--gray-400);
    padding: 0.3rem;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    transition: color 0.15s, background 0.15s;
  }

  .input-action-btn:hover { color: var(--green); background: var(--green-light); }

  .chat-input-field-wrap { flex: 1; }

  .chat-input-field {
    width: 100%;
    padding: 0.6rem 0.9rem;
    border-radius: 20px;
    border: 1.5px solid var(--gray-200);
    font-size: 0.88rem;
    font-family: var(--font);
    outline: none;
    transition: border-color 0.15s;
    background: var(--gray-50);
  }

  .chat-input-field:focus { border-color: var(--green); background: white; }

  .send-btn {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    background: var(--green);
    color: white;
    border: none;
    border-radius: 20px;
    padding: 0.6rem 1.1rem;
    font-size: 0.85rem;
    font-weight: 700;
    font-family: var(--font);
    cursor: pointer;
    flex-shrink: 0;
    transition: background 0.15s;
  }

  .send-btn:hover { background: var(--green-hover); }
</style>

<script>
  const convItems = document.querySelectorAll<HTMLButtonElement>('.conv-item');
  convItems.forEach(item => {
    item.addEventListener('click', () => {
      convItems.forEach(i => i.classList.remove('active'));
      item.classList.add('active');
    });
  });

  const sendBtn      = document.getElementById('sendBtn');
  const msgInput     = document.getElementById('messageInput') as HTMLInputElement | null;
  const chatMessages = document.getElementById('chatMessages');

  function sendMessage() {
    if (!msgInput || !chatMessages) return;
    const text = msgInput.value.trim();
    if (!text) return;

    const wrap = document.createElement('div');
    wrap.className = 'msg-wrap me';

    const bWrap = document.createElement('div');
    bWrap.className = 'msg-bubble-wrap';

    const bubble = document.createElement('div');
    bubble.className = 'msg-bubble me';
    bubble.textContent = text;

    const timeEl = document.createElement('span');
    timeEl.className = 'msg-time';
    timeEl.textContent = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

    bWrap.appendChild(bubble);
    bWrap.appendChild(timeEl);
    wrap.appendChild(bWrap);
    chatMessages.appendChild(wrap);

    msgInput.value = '';
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }

  sendBtn?.addEventListener('click', sendMessage);

  msgInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });
</script>
